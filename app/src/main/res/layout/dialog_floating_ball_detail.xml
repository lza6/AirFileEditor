<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_background">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_replace"
            android:contentDescription="图标" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="文件替换任务"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color" />

        <ImageView
            android:id="@+id/btnHide"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_status_success"
            android:contentDescription="隐藏"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

    </LinearLayout>

    <!-- 进度条 -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginBottom="8dp"
        android:indeterminate="false"
        app:indicatorColor="@color/primary_color" />

    <!-- 进度信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tvProgressPercent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color" />

        <TextView
            android:id="@+id/tvFileCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 0"
            android:textSize="12sp"
            android:textColor="@color/secondary_text_color" />

    </LinearLayout>
    
    <!-- 实时速度 -->
    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0 MB/s"
        android:textSize="12sp"
        android:textColor="@color/primary_color"
        android:paddingBottom="12dp"
        android:gravity="end" />

    <!-- 当前文件 -->
    <TextView
        android:id="@+id/tvCurrentFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="准备中..."
        android:textSize="13sp"
        android:textColor="@color/secondary_text_color"
        android:paddingBottom="12dp"
        android:singleLine="true"
        android:ellipsize="middle" />

    <!-- 模式信息 -->
    <TextView
        android:id="@+id/tvMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模式: "
        android:textSize="12sp"
        android:textColor="@color/secondary_text_color"
        android:paddingBottom="12dp" />

    <!-- 按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消任务"
            android:textSize="13sp"
            android:textColor="@color/error_color"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂停"
            android:textSize="13sp"
            android:textColor="@color/primary_color"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恢复"
            android:textSize="13sp"
            android:textColor="@color/primary_color"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/btnForeground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏"
            android:textSize="13sp"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            style="?attr/materialButtonStyle" />

    </LinearLayout>

</LinearLayout>