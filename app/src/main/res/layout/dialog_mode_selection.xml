<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="请根据您的设备情况选择最合适的访问模式，选择后将自动进行物理验证。"
        android:textColor="@color/text_secondary"
        android:textSize="13sp" />

    <!-- Root Mode -->
    <LinearLayout
        android:id="@+id/layout_mode_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_mode_root_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Root 模式"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mode_root_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="原理：通过超级用户权限直接访问系统文件。"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A000000" />

    <!-- Shizuku Mode -->
    <LinearLayout
        android:id="@+id/layout_mode_shizuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_mode_shizuku_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shizuku 模式"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mode_shizuku_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="原理：利用 ADB 系统服务权限进行文件操作。"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A000000" />

    <!-- Native Mode -->
    <LinearLayout
        android:id="@+id/layout_mode_native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_mode_native_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通模式"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mode_native_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="原理：使用系统原生 API 访问公开目录数据。"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
